@model IEnumerable<GeneralStore.MVC.Models.Transaction>
@{
    ViewBag.Title = "Index";
}

<h2>List of Transactions</h2>
<p>
    @Html.ActionLink("Create A Transaction", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TransactionDate)
    </td>
    <td>
        @Html.ActionLink("Change", "Edit", new { id = item.TransactionDate }) |
        @Html.ActionLink("More Info", "Details", new { id = item.TransactionDate }) |
        @Html.ActionLink("Remove", "Delete", new { id = item.TransactionDate})
    </td>
</tr>
    }
</table>
